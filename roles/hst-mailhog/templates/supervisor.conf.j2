[program:{{ mailhog_name }}]
command=/home/{{ ansible_user }}/bin/mailhog -auth-file /home/{{ ansible_user }}/mailhog/.htpasswd -maildir-path /home/{{ ansible_user }}/mailhog/data/ -storage maildir -hostname {{ mailhog_hostname }} -smtp-bind-addr {{ loopback_adress }}:{{ mailhog_smtp_sock }} -ui-bind-addr {{ loopback_adress }}:{{ mailhog_ui_sock }} -api-bind-addr {{ loopback_adress }}:{{ mailhog_api_sock }}
socket=tcp://{{ loopback_adress }}:{{ mailhog_smtp_sock }}
autostart=true
autorestart=true
startsecs=5
stopwaitsecs=5
stopasgroup=true
killasgroup=true
